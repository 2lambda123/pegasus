{
	"definitions": {
		
	},
	"$schema": "http://json-schema.org/draft-07/schema#",
	"$id": "http://example.com/root.json",
	"type": "array",
	"title": "The Root Schema",
	"required": [
			"transformations"
	],
	"items": {
		"$id": "#/items",
		"type": "object",
		"title": "The Items Schema",
		"properties": {
			"transformations": {
				"$id": "#/transformations",
				"type": "array",
				"title": "The transformations Schema",
				"items": {
					"$id": "#/transformations/items",
					"type": "object",
					"title": "The Items Schema",
					"required": [
						"name",
						"site"
					],
					"properties": {
						"namespace": {
							"$id": "#/transformations/namespace",
							"type": "string",
							"title": "The Namespace Schema",
							"default": "",
							"examples": [
								"ls"
							],
							"pattern": "^(.*)$"
						},
						"name": {
							"$id": "#/transformations/name",
							"type": "string",
							"title": "The Name Schema",
							"default": "",
							"examples": [
								"keg"
							],
							"pattern": "^(.*)$"
						},
						"version": {
							"$id": "#/transformations/version",
							"type": "number",
							"title": "The Version Schema",
							"default": 0.0,
							"examples": [
								1.0
							]
						},
						"profile": {
							"$id": "#/profile",
							"type": "array",
							"title": "The Profile Schema",
							"items": {
								"$id": "#/profile/items",
								"type": "object",
								"title": "The Items Schema",
								"properties": {
									"env": {
										"$id": "#/profile/env",
										"type": "object",
										"title": "The Environment Schema",
										"patternProperties": {
											"^.*$": {
												"anyOf": [
													{
														"type": "string"
													},
													{
														"type": "null"
													}
												]
											}
										},
										"additionalProperties": false
									},
									"condor": {
										"$id": "#/profile/condor",
										"type": "object",
										"title": "The Environment Schema",
										"patternProperties": {
											"^.*$": {
												"anyOf": [
													{
														"type": "string"
													},
													{
														"type": "null"
													}
												]
											}
										},
										"additionalProperties": false
									}
								},
								"additionalProperties": false
							}
						},
						"metadata": {
							"$id": "#/transformations/metadata",
							"type": "object",
							"title": "The Metadata Schema",
							"patternProperties": {
								"^.*$": {
									"anyOf": [
										{
											"type": "string"
										},
										{
											"type": "null"
										}
									]
								}
							},
							"additionalProperties": false
						},
						"site": {
							"$id": "#/transformations/site",
							"type": "array",
							"title": "The Site Schema",
							"items": {
								"$id": "#/transformations/site/items",
								"type": "object",
								"title": "The Items Schema",
								"required": [
									"name",
									"pfn",
									"arch",
									"os",
									"osrelease",
									"osversion",
									"type"
								],
								"properties": {
									"name": {
										"$id": "#/transformations/site/name",
										"type": "string",
										"title": "The Name Schema",
										"default": "",
										"examples": [
											"isi"
										],
										"pattern": "^(.*)$"
									},
									"profile": {
										"$id": "#/profile",
										"type": "array",
										"title": "The Profile Schema",
										"items": {
											"$id": "#/profile/items",
											"type": "object",
											"title": "The Items Schema",
											"properties": {
												"env": {
													"$id": "#/transformations/site/env",
													"type": "object",
													"title": "The Environment Schema",
													"patternProperties": {
														"^.*$": {
															"anyOf": [
																{
																	"type": "string"
																},
																{
																	"type": "null"
																}
															]
														}
													},
													"additionalProperties": false
												},
												"condor": {
													"$id": "#/profile/condor",
													"type": "object",
													"title": "The Environment Schema",
													"patternProperties": {
														"^.*$": {
															"anyOf": [
																{
																	"type": "string"
																},
																{
																	"type": "null"
																}
															]
														}
													},
													"additionalProperties": false
												}
											},
											"additionalProperties": false
										}
									},
									"metadata": {
										"$id": "#/transformations/metadata",
										"type": "object",
										"title": "The Metadata Schema",
										"patternProperties": {
											"^.*$": {
												"anyOf": [
													{
														"type": "string"
													},
													{
														"type": "null"
													}, {
														"type": "number"
													}
												]
											}
										},
										"additionalProperties": false
									},
									"pfn": {
										"$id": "#/transformations/site/pfn",
										"type": "string",
										"title": "The Pfn Schema",
										"default": "",
										"examples": [
											"/usr/bin/ls"
										],
										"pattern": "^(.*)$"
									},
									"arch": {
										"$id": "#/transformations/site/arch",
										"type" : "string",
										 "enum": ["x86", "x86_64", "ppc", "ppc_64", "ia64",  "sparcv7", "sparcv9", "amd64"],										
										"title": "The Arch Schema",
										"default": "",
										"examples": [
											"x86"
										]
									},
									"os": {
										"$id": "#/transformations/site/os",
										"type": "string",
										"title": "The Os Schema",
										"enum": ["linux", "sunos", "aix", "macosx", "windows"],
										"default": "",
										"examples": [
											"linux"
										]
									},
									"osrelease": {
										"$id": "#/transformations/site/osrelease",
										"type": "string",
										"title": "The Osrelease Schema",
										"default": "",
										"examples": [
											"fc"
										],
										"pattern": "^(.*)$"
									},
									"osversion": {
										"$id": "#/transformations/site/osversion",
										"type": "integer",
										"title": "The Osversion Schema",
										"default": 0,
										"examples": [
											4
										]
									},
									"type": {
										"$id": "#/transformations/site/type",
										"type": "string",
										"title": "The Type Schema",
										"enum": ["STATIC_BINARY", "INSTALLED", "STAGEABLE"],
										"default": "",
										"examples": [
											"INSTALLED"
										]
									},
									"container": {
										"$id": "#/transformations/site/container",
										"type": "string",
										"title": "The Container Schema",
										"default": "",
										"examples": [
											"centos-pegasus"
										],
										"pattern": "^(.*)$"
									}
								},
								"additionalProperties" : false								
							}
						}
					},
					"additionalProperties" : false	
				}
			},
			"cont": {
				"$id": "#/cont",
				"type": "array",
				"title": "The Cont Schema",
				"items": {
					"$id": "#/cont/items",
					"type": "object",
					"title": "The Items Schema",
					"required": [
						"name",
						"image",
						"image_site",
						"mount"
					],
					"properties": {
						"name": {
							"$id": "#/cont/name",
							"type": "string",
							"title": "The Name Schema",
							"default": "",
							"examples": [
								"centos-pegasus"
							],
							"pattern": "^(.*)$"
						},
						"type": {
							"$id": "#/cont/name",
							"type": "string",
							"title": "The Name Schema",
							"default": "",
							"examples": [
								"docker"
							],
							"pattern": "^(.*)$"
						},
						"image": {
							"$id": "#/cont/image",
							"type": "string",
							"title": "The Image Schema",
							"default": "",
							"examples": [
								"docker:///rynge/montage:latest"
							],
							"pattern": "^(.*)$"
						},
						"image_site": {
							"$id": "#/cont/image_site",
							"type": "string",
							"title": "The Image_site Schema",
							"default": "",
							"examples": [
								"optional site"
							],
							"pattern": "^(.*)$"
						},
						"dockerfile": {
							"$id": "#/cont/dockerfile",
							"type": "string",
							"title": "The dockerfile Schema",
							"default": "",
							"examples": [
								"/var"
							],
							"pattern": "^(.*)$"
						},
						"mount": {
							"$id": "#/cont/mount",
							"type": "string",
							"title": "The Mount Schema",
							"default": "",
							"examples": [
								"/Volumes/Work/lfs1:/shared-data/:ro"
							],
							"pattern": "^(.*)$"
						},
						"profile": {
							"$id": "#/cont/profile",
							"type": "array",
							"title": "The Profile Schema",
							"required": [
								"environment"
							],
							"properties": {
								"environment": {
									"$id": "#/cont/environment",
									"type": "array",
									"title": "The Environment Schema",
									"patternProperties": {
										"^.*$": {
											"anyOf": [
												{
													"type": "string"
												},
												{
													"type": "null"
												}
											]
										}
									},
									"additionalProperties": false
								}
							},
							"additionalProperties": false
						}
					},
					"additionalProperties": false
				}
			}
			
	},
	"additionalProperties" : false	
	}
}
