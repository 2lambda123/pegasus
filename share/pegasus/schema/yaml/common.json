{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "file:///Users/ryantanaka/ISI/pegasus/share/pegasus/schema/yaml/common.json",
    "$def": {
        "versionString": {
            "type": "string",
            "pattern": "^[0-9]+(\\.[0-9]+(\\.[0-9]+)?)?$"
        },

        "nodeIdString": {
            "type": "string",
            "pattern": "^[\\-0-9a-zA-Z\\_]+$"
        },

        "filenameSafeString": {
            "type": "string",
            "pattern": "^[\\-0-9a-zA-Z\\_]+$"
        },

        "genericProfilePropertyType": {
            "type": "object",
            "patternProperties": {
                "^[\\_\\.\\-a-zA-Z0-9_]+$": {
                    "oneOf": [
                        { "type": "string" },
                        { "type": "number" }
                    ]
                }
            },
            "additionalProperties": false,
            "patternProperties": {
              "^x-": { "$ref": "#/$def/vendorExtension" }
          }
        },

        "profiles": {
            "type": "object",
            "properties": {
                "env": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z_]+[a-zA-Z0-9_]*$": {
                            "oneOf": [
                                { "type": "string" },
                                { "type": "number" }
                            ]
                        }
                    },
                    "additionalProperties": false,
                    "patternProperties": {
                      "^x-": { "$ref": "#/$def/vendorExtension" }
                    }
                },

                "condor": { "$ref": "#/$def/genericProfilePropertyType" },
                "globus": { "$ref": "#/$def/genericProfilePropertyType" },
                "dagman": { "$ref": "#/$def/genericProfilePropertyType" },
                "pegasus": { "$ref": "#/$def/genericProfilePropertyType" },
                "hints": { "$ref": "#/$def/genericProfilePropertyType" }
            },
            "additionalProperties": false,
            "patternProperties": {
                "^x-": { "$ref": "#/$def/vendorExtension" }
            }
        },

        "vendorExtension": {
          "description": "Any property starting with x- is valid.",
          "additionalProperties": true,
          "additionalItems": true
        }
    }
}
