{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "file:///Users/ryantanaka/ISI/pegasus/share/pegasus/schema/yaml/sc-5.0.json",
    "$defs": {
        "arch": {
            "type": "string",
            "enum": [
                "x86",
                "x86_64",
                "sparcv7",
                "sparcv9",
                "aix",
                "ppc"
            ]
        },

        "os.type": {
            "type": "string",
            "enum": [
                "linux",
                "sunos",
                "macosx",
                "aix",
                "windows"
            ]
        },

        "fileServer": {
            "type": "object",
            "properties": {
                "url": { "type": "string" },
                "operation": {
                    "type": "string",
                    "enum": ["all", "put", "get"]
                },
                "profiles": { "$ref": "common.json#/$defs/profiles" }
            },
            "required": ["url"],
            "additionalProperties": false,
            "patternProperties": {
              "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
            }
        },

        "directory": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "sharedScratch",
                        "sharedStorage",
                        "localScratch",
                        "localStorage"
                    ]
                },
                "path": { "type": "string" },
                "freeSize": { "type": "string" },
                "totalSize": { "type": "string" },
                "fileServers": {
                    "type": "array",
                    "items": { "$ref": "#/$defs/fileServer" },
                    "minItems": 1
                }
            },
            "required": ["type", "fileServers"],
            "additionalProperties": false,
            "patternProperties": {
              "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
            }
        },

        "grid": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "gt2",
                        "gt4",
                        "gt5",
                        "condor",
                        "cream",
                        "batch",
                        "pbs",
                        "lsf",
                        "sge",
                        "nordugrid",
                        "unicore",
                        "ec2",
                        "deltacloud"
                    ]
                },
                "contact": { "type": "string" },
                "scheduler": {
                    "type": "string",
                    "enum": [
                        "fork",
                        "pbs",
                        "lsf",
                        "condor",
                        "sge",
                        "unknown"
                    ]
                },
                "jobtype": {
                    "type": "string",
                    "enum": [
                        "compute",
                        "auxillary",
                        "transfer",
                        "register",
                        "cleanup"
                    ]
                },
                "freeMem": { "type": "string" },
                "totalMem": { "type": "string" },
                "maxCount": { "type": "string" },
                "maxCPUTime": { "type": "string" },
                "runningJobs": {
                    "type": "number",
                    "minimum": 0
                },
                "jobsInQueue": {
                    "type": "number",
                    "minimum": 0
                },
                "idleNodes": {
                    "type": "number",
                    "minimum": 0
                },
                "totalNodes": {
                    "type": "number",
                    "minimum": 0
                }
            },
            "required": ["type", "contact", "scheduler"],
            "additionalProperties": false,
            "patternProperties": {
              "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
            }
        },

        "replicaCatalog": {
            "type": "object",
            "properties": {
                "type": { "type": "string" },
                "url": { "type": "string" },
                "aliases": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "connections": {
                    "type": "array",
                    "items": { "type": "string" }
                }
            },
            "required": ["type", "url"],
            "additionalProperties": false,
            "patternProperties": {
              "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
            }
        }
    },

    "type": "object",
    "properties": {
        "scVersion": { "$ref": "common.json#/$defs/versionString" },
        "sites": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": { "type": "string" },
                    "arch": { "$ref": "#/$defs/arch" },
                    "os.type": { "$ref": "#/$defs/os.type" },
                    "os.release": { "type": "string" },
                    "os.version": { "$ref": "common.json#/$defs/versionString" },
                    "glibc": { "$ref": "common.json#/$defs/versionString" },
                    "directories": {
                        "type": "array",
                        "items": { "$ref": "#/$defs/directory" }
                    },
                    "grids": {
                        "type": "array",
                        "items": { "$ref": "#/$defs/grid" }
                    },
                    "profiles": { "$ref": "common.json#/$defs/profiles" },
                    "replica-catalogs": {
                        "type": "array",
                        "items": { "$ref": "#/$defs/replicaCatalog" }
                    }
                },
                "required": ["name"],
                "additionalProperties": false,
                "patternProperties": {
                  "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
                }
            },
            "minItems": 1
        }
    },
    "required": ["scVersion", "sites"]
}
