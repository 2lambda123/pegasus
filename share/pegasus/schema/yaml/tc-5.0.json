{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "file:///Users/ryantanaka/ISI/pegasus/share/pegasus/schema/yaml/common.json",
    "$defs": {
        "transformation": {
            "type": "object",
            "properties": {
                "namespace": { "type": "string" },
                "name": { "type": "string" },
                "version": { "type": "string" },
                "hooks": { "$ref": "dax-5.0.json#/$defs/hooks" }
                "profiles": { "$ref": "common.json#/$defs/profiles" },
                "uses": {
                    "type": "array",
                    "items": { "type": "string" }
                },
                "sites": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "name": { "type": "string" },
                            "arch": { "$ref": "sc-5.0.json#/$defs/arch" },
                            "os.type": { "$ref": "sc-5.0.json#/$defs/os.type" },
                            "os.release": { "type": "string" },
                            "os.version": { "$ref": "common.json#/$defs/versionString" },
                            "glibc": { "$ref": "common.json#/$def/versionString" },
                            "pfn": { "type": "string" },
                            "profiles": { "$ref": "common.json#/$defs/profiles" },
                            "type": {
                                "type": "string",
                                "enum": ["stageable", "installed"]
                            },
                            "container": { "type": "string" }
                        },
                        "required": ["name", "type", "pfn"],
                        "additionalProperties": false,
                        "patternProperties": {
                          "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
                        }
                    },
                    "minItems": 1
                }
            },
            "required": ["name", "sites"],
            "additionalProperties": false,
            "patternProperties": {
              "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
            }
        },

        "container": {
            "type": "object",
            "properties": {
                "name": { "type": "string" },
                "type": {
                    "type": "string",
                    "enum": ["docker", "singularity", "shifter"]
                },
                "image": { "type": "string" },
                "imageSite": { "type": "string" },
                "mount": { "type": "string" },
                "profiles": { "$ref": "common.json#/$defs/profiles" }
            },
            "required": ["name", "type", "image", "mount"],
            "additionalProperties": false,
            "patternProperties": {
              "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
            }
        }
    },

    "type": "object",
    "properties": {
        "tcVersion": { "$ref": "common.json#/$defs/versionString" },
        "transformations": {
            "type": "array",
            "items": { "$ref": "#definitions/transformation" },
            "minItems": 1
        },
        "containers": {
            "type": "array",
            "items": { "$ref": "#definitions/container" },
            "minItems": 0
        }
    },
    "required": ["tcVersion", "transformations"],
    "additionalProperties": false,
    "patternProperties": {
      "^x-": { "$ref": "common.json#/$defs/vendorExtension" }
    }
}
