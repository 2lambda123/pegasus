#!/bin/sh
# 
# This script is staged to batch jobmanager to check all Pegasus
# transformations.
#
# $Id$
#
PATH=/bin:/usr/bin

# install trap for premature exit
trap 'echo "FATAL: premature exit"' EXIT

# read list of application filesnames from staged stdin
while [ "X$1" != "X" ]; do
    # app=$1
    # shift
    read app
    test -x "$app" || echo "ERROR: $app"
done

# done
trap - EXIT
echo 'OK'
exit 0
