#!/bin/bash

TOP_DIR=`pwd`

# The first argument is the build plan name which contains
# plan/branch information. We are only interested in the
# last part of this name which is the test name.
TEST=`echo $1 | sed 's/.*- //'`
shift

cd test/core/$TEST

echo "TEST is $TEST"
pwd

#Launch the test
./run-bamboo-test "$@"

STATUS=$?
if [ $STATUS != 0 ]; then
   echo "Test failed!"
   exit $STATUS
fi

exit
